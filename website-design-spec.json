{
  "project": {
    "name": "Rahul P - Data Professional Portfolio",
    "type": "Personal Portfolio Website",
    "version": "1.0",
    "purpose": "Showcase data analytics and data engineering skills to attract entry-level opportunities",
    "target_audience": [
      "Recruiters",
      "Hiring Managers",
      "Data Teams",
      "Tech Companies"
    ]
  },

  "design_system": {
    "style": "Neo-Brutalism",
    "description": "Modern minimalist design with bold borders, hard shadows, and clean geometric shapes",
    "principles": [
      "Bold black borders (1.5px)",
      "Hard shadows (4px 4px 0px)",
      "Pill-shaped buttons and badges",
      "Rounded cards (32px radius)",
      "High contrast elements",
      "Playful decorative SVG elements"
    ],

    "colors": {
      "primary": {
        "background": "#f0f4f8",
        "description": "Light blue-grey for main background"
      },
      "surface": {
        "background": "#ffffff",
        "description": "White for cards and elevated surfaces"
      },
      "text": {
        "primary": "#1a1a1a",
        "secondary": "#555555",
        "description": "Black for headings, grey for body text"
      },
      "accent": {
        "primary": "#2563eb",
        "secondary": "#10b981",
        "description": "Professional blue and data green"
      },
      "borders": "#000000"
    },

    "typography": {
      "headings": {
        "font": "Space Grotesk",
        "weight": 700,
        "source": "Google Fonts"
      },
      "body": {
        "font": "Inter",
        "weight": "400-600",
        "source": "Google Fonts"
      },
      "sizes": {
        "h1": "3.5rem (desktop: 4.5rem)",
        "h2": "2.5rem",
        "h3": "1.5rem",
        "body": "16px",
        "subtitle": "1.25rem"
      }
    },

    "spacing": {
      "section_padding": "80px vertical",
      "card_gap": "24px",
      "container_max_width": "1200px",
      "border_radius": {
        "cards": "32px",
        "buttons": "50px (pill)",
        "inputs": "12px",
        "badges": "20px"
      }
    },

    "shadows": {
      "default": "4px 4px 0px 0px black",
      "hover": "6px 6px 0px 0px black",
      "pressed": "none (element moves to shadow position)"
    }
  },

  "layout_structure": {
    "type": "Single Page Application (SPA)",
    "navigation": "Fixed sticky navbar with smooth scroll",
    "sections": [
      {
        "id": "hero",
        "name": "Hero Section",
        "purpose": "First impression, introduce Rahul",
        "elements": [
          "Animated badge with 'Data Professional'",
          "Typing animation on main heading",
          "Professional subtitle with role description",
          "Circular profile photo with decorative border",
          "Decorative SVG elements (sparkle, squiggle, plus)",
          "Two CTA buttons (View Projects, Contact Me)"
        ],
        "height": "90vh",
        "background": "Gradient orbs animation"
      },
      {
        "id": "stats",
        "name": "Stats Section",
        "purpose": "Quick metrics overview",
        "elements": [
          "4 stat cards: Projects, Technologies, Internship, Certifications",
          "Gradient number styling",
          "Hover animations"
        ],
        "background": "Gradient overlay with radial effects"
      },
      {
        "id": "skills",
        "name": "Technical Skills",
        "purpose": "Showcase technical competencies",
        "layout": "Bento grid (4 cards)",
        "categories": [
          "Data Analytics",
          "Programming & Querying",
          "Data Engineering",
          "Tools & Technologies"
        ],
        "card_features": [
          "SVG icons",
          "Skill lists with custom bullets",
          "Hover effects with gradient accents",
          "Neo-brutalist shadows"
        ]
      },
      {
        "id": "about",
        "name": "About & Experience",
        "purpose": "Tell Rahul's story and work history",
        "elements": [
          "Professional summary paragraph",
          "Timeline with vertical line",
          "Experience entries with badges",
          "Timeline markers and dates"
        ],
        "max_width": "800px"
      },
      {
        "id": "portfolio",
        "name": "Data Projects",
        "purpose": "Showcase project portfolio",
        "layout": "Responsive grid (auto-fit, min 300px)",
        "projects": 5,
        "card_structure": [
          "Featured image (Unsplash)",
          "Role badge",
          "Project title",
          "Description",
          "Technology tags"
        ],
        "hover_effect": "Image zoom, card lift with enhanced shadow"
      },
      {
        "id": "certifications",
        "name": "Certifications & Learning",
        "purpose": "Display credentials and career goals",
        "elements": [
          "4 certification cards with gradient top border",
          "Career interests section with styled tags"
        ],
        "layout": "Grid (auto-fit, min 250px)"
      },
      {
        "id": "contact",
        "name": "Contact Form",
        "purpose": "Enable communication with visitors",
        "form_fields": ["Name", "Email", "Message"],
        "features": [
          "Client-side validation",
          "Toast notification on submit",
          "Loading state on button",
          "Neo-brutalist input styling"
        ]
      }
    ]
  },

  "interactive_elements": {
    "navbar": {
      "type": "Fixed header with floating navbar",
      "behavior": "Transparent initially, shows background on scroll",
      "active_state": {
        "trigger": "Scroll position tracking",
        "style": "Black background with white text",
        "offset": "200px before section"
      },
      "sticky_behavior": "Fixed at top, always visible"
    },

    "animations": {
      "typing_effect": {
        "target": "Main heading 'Hi, I'm Rahul P'",
        "duration": "2s",
        "cursor": "Blinking, removed after animation"
      },
      "float": {
        "targets": ["Hero badge", "Decorative elements", "Background orbs"],
        "duration": "3-25s",
        "type": "Infinite ease-in-out"
      },
      "shimmer": {
        "target": "Hero badge",
        "effect": "Gradient sweep",
        "duration": "3s infinite"
      },
      "hover_animations": {
        "cards": "Translate up, shadow enhancement",
        "buttons": "Shadow reduction, translate to shadow position",
        "images": "Scale 1.05"
      }
    },

    "background_effects": {
      "gradient_orbs": {
        "count": 2,
        "colors": ["Blue (#2563eb)", "Green (#10b981)"],
        "size": ["800px", "700px"],
        "opacity": 0.1,
        "animation": "Float in opposite directions"
      },
      "section_patterns": {
        "type": "Diagonal repeating stripes",
        "opacity": 0.02,
        "angle": "45deg"
      }
    }
  },

  "technical_implementation": {
    "file_structure": {
      "html": "index.html - Semantic HTML5 structure",
      "css": "styles.css - Modular CSS with CSS variables",
      "javascript": "script.js - Vanilla JS for interactions",
      "assets": ["profile.jpg - Profile photo"],
      "documentation": ["README.md", "CHANGES.md", "SETUP_PHOTO.md"]
    },

    "css_architecture": {
      "methodology": "BEM-inspired with utility classes",
      "custom_properties": "CSS variables for theming",
      "sections": [
        "CSS Variables & Design System",
        "Reset & Global Styles",
        "Utilities",
        "Buttons",
        "Navbar",
        "Hero Section",
        "Stats Section",
        "Skills/Services (Bento Grid)",
        "Experience (Timeline)",
        "Portfolio/Projects",
        "Certifications",
        "Contact Form",
        "Footer",
        "Animations"
      ]
    },

    "javascript_features": [
      "Scroll-based navbar styling",
      "Active section highlighting in navigation",
      "Typing animation completion handler",
      "Smooth scroll for anchor links",
      "Form submission with validation",
      "Toast notification system"
    ],

    "responsive_design": {
      "approach": "Mobile-first with fluid layouts",
      "breakpoints": {
        "mobile": "< 768px",
        "desktop": ">= 768px"
      },
      "techniques": [
        "CSS Grid with auto-fit/minmax",
        "Flexible typography (rem units)",
        "Responsive images",
        "Viewport-based spacing",
        "Mobile-optimized navbar"
      ]
    }
  },

  "performance_optimizations": {
    "images": {
      "source": "Unsplash CDN with size parameters",
      "format": "JPG",
      "lazy_loading": "Native browser support"
    },
    "fonts": {
      "strategy": "Google Fonts with preconnect",
      "subsets": "Latin only",
      "display": "swap"
    },
    "css": {
      "single_file": true,
      "minification": "Recommended for production",
      "critical_css": "Inline option available"
    },
    "javascript": {
      "vanilla": "No framework dependencies",
      "size": "< 2KB",
      "async_loading": "Possible"
    }
  },

  "accessibility": {
    "semantic_html": true,
    "aria_labels": "Social icons, form elements",
    "keyboard_navigation": "Full support",
    "focus_states": "Visible on all interactive elements",
    "color_contrast": "WCAG AA compliant",
    "alt_text": "All images have descriptive alt attributes"
  },

